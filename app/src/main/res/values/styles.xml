    <style name="GoldButton" parent="AppRoundedCornersButton">
        <item name="android:textSize">@dimen/home_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/solid_background_gold</item>
        <item name="android:minHeight">@dimen/gold_btn_height</item>
        <item name="android:minWidth">@dimen/gold_btn_width</item>
        <item name="android:fontFamily">@font/sf_ui_text_bold</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="AppEditTextBlack" parent="@style/AppEditText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppEditTextForm" parent="@style/AppEditText">
        <item name="android:textColor">@color/text_color_seconday</item>
        <item name="android:textColorHint">@color/text_color_seconday</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="custom_dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="custom_error_dialog" parent="AppCompatAlertDialogStyle">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AppEditTextProfileForm" parent="@style/AppEditText">
        <item name="android:textColor">@color/text_color</item>
