<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/rounded_corner_background"
        android:paddingTop="@dimen/dimen_30dp"
        android:paddingStart="@dimen/dimen_25dp"
        android:paddingEnd="@dimen/dimen_25dp"
        android:paddingBottom="@dimen/dimen_25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_first_end_action"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dimen_22sp"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/black"
                android:fontFamily="@font/googlesans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_content"
                android:layout_below="@+id/tv_first_end_action"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_19sp"
                android:textColor="@color/text_color"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:fontFamily="@font/googlesans_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_ok"
                style="@style/BlueButton"
                android:layout_below="@+id/tv_content"
                android:layout_marginTop="@dimen/dimen_34dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_cancel"
                style="@style/BlueButton"
                android:layout_below="@+id/btn_ok"
                android:layout_marginTop="@dimen/dimen_23dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>