<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
    android:id="@+id/cardView1"
    android:layout_width="0dp"
    android:layout_height="@dimen/dimen_100dp"
    app:cardBackgroundColor="@color/colorAccent"
     app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/cardView2"
    android:layout_margin="@dimen/dimen_20dp"
    app:layout_constraintHorizontal_weight="3"
    app:cardCornerRadius="@dimen/single_day_layout_corner_radius"
    app:cardElevation="@dimen/single_day_layout_elevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/single_day_layout_content_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17sp"
            android:text="TEMPERATURE" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_100dp"
        app:layout_constraintLeft_toRightOf="@+id/cardView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="3"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/color_primary"
        app:cardCornerRadius="@dimen/single_day_layout_corner_radius"
        app:cardElevation="@dimen/single_day_layout_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/single_day_layout_content_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17sp"
            android:text="CO2" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_100dp"
        app:cardBackgroundColor="@color/color_primary_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/cardView1"
        android:layout_margin="@dimen/dimen_20dp"
        app:layout_constraintHorizontal_weight="3"
        app:cardCornerRadius="@dimen/single_day_layout_corner_radius"
        app:cardElevation="@dimen/single_day_layout_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/single_day_layout_content_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17sp"
            android:text="HUMIDITÃ‰" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_100dp"
        app:layout_constraintLeft_toRightOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="3"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/start_gold_color"
        app:cardCornerRadius="@dimen/single_day_layout_corner_radius"
        app:cardElevation="@dimen/single_day_layout_elevation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/single_day_layout_content_padding" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17sp"
            android:text="VOC" />
    </androidx.cardview.widget.CardView>


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


